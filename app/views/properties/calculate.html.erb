<div class="container">
    <div class="row">
      <h1>New Property</h1>
      <h4>enter information to about a property to calculate its flip potential</h4>
    </div>
    <!-- left grid -->
    <div class="row">
      <div class="col-lg-1">
      </div>
    <!-- center grid for Property inputs-->

      <div class="col-lg-4">
        <div class="property-card">
          <div class="text-center">
            <h3>New Property</h3>
            </div>
          <%= render 'form' %>
        </div>
      </div>
      
      <!-- right grid for Property output -->
      
        <div class="col-lg-7">
          <div class="house-start">
          </div> 
        </div>
    </div>

    <div class="row">
      <div class="result-window">
        <div class="col-lg-8">
          <h3>results</h3>
          <%= render 'results' %>

        </div>
      </div>
    </div>
    <div class="row">
      <div class="btn btn-success">
          <p>save result</p> 
      </div>
    </div>
    <!-- part of future bottom navigation bar
    <div class="pull-left">
      <%= link_to 'Flip List', properties_path %>
    </div>  -->
</div>


