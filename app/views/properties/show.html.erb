<% if current_user %>
  <div class="container">
    <h1><%= current_user.username.capitalize %>'s Property Details</h1>
    <h4>this property has a $<%= @property.calculate_profit_margin %> profit potential</h4>
    <!-- left grid -->
    <div class="row">
      <div class="col-lg-2">
      </div>
    </div>
    <!-- center grid for Property inputs-->

      <div class="col-lg-4">
        <div class="property-card">
          <div class="text-center">
            <p>
              <div class="house-saved">
                <%= image_tag 'fliphouse-green.png', size: '150x150'%>
              </div>
            </p>
            <h3><%= @property.address %></h3>
            <p>zillow link</p><br>
          </div>
          <div class="property-results">
              <h5>
                <strong>Profit:</strong>
                  $<%= @property.profit_margin %>
              </h5>
              <h5>
                <strong>% Profit:</strong>
                <%= @property.profit_percent %>%
              </h5>            
              <h5>
                <strong>List price:</strong>
                <%= @property.list_price %>
              </h5>
              <h5>
                <strong>Sale price:</strong>
                <%= @property.sale_price %>
              </h5>
              <h5>
                <strong>Fix costs:</strong>
                <%= @property.fix_costs %>
              </h5> 
              <h5>
                <strong>Months held:</strong>
                <%= @property.time_held %>
              </h5>
              <small><%= @property.date_published %></small>
          </div>   
        </div>

      </div>
    
    <!-- right grid for Property output -->
    <!-- footer for Property Show output -->
    </div><br> 
      <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-2">  
          <%= link_to 'Flip List', properties_path %>  |
          <%= link_to 'Edit', edit_property_path(@property) %>
        </div>  
        <div class="col-md-9"></div>  
      </div>
  <br>
<% else %>
  <h1>you must be logged in to view Property Details</h1>
  <%= link_to 'Login', login_path %>
  <%= link_to 'Signup', '/signup' %>
<% end %>

