<div class="col-lg-4">
  <div class="property-card">
    <div class="text-center">
      <h2>Login:</h2>
      <%= form_for :unicorn, url: '/login' do |f| %>
        <%= f.text_field :username, placeholder: 'Username'  %><br><br>
        <%= f.password_field :password, placeholder: 'Password'  %><br><br><br>
        <%= f.submit 'Login' %>
      <% end %>
    </div>
  </div>
</div>